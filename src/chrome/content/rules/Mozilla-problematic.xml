<!--
	For rules that are on by default, see Mozilla.com.xml.

-->
<ruleset name="Mozilla.com (problematic)">

	<!--	Complications:
				-->
	<target host="status.mozilla.com" />


	<!--	Redirect keeps path and args,
		but not forward slash:
					-->
	<rule from="^http://status\.mozilla\.com/+"
		to="https://status.mozilla.org/" />

		<test url="http://status.mozilla.com//" />

</ruleset>
